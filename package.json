{
  "name": "endpoint-todo-list",
  "version": "0.1.12",
  "private": false,
  "main": "dist/index.js",
  "repository": "https://effinrich@github.com/effinrich/endpoint-todo-list.git",
  "author": "Rich <rich@freebirdrides.com>",
  "description": "Design system workflow. From developing components locally in Storybook to publishing for reuse on NPM.",
  "license": "MIT",
  "dependencies": {
    "@loadable/component": "^5.14.1",
    "@reduxjs/toolkit": "^1.5.0",
    "@testing-library/jest-dom": "^5.11.4",
    "@testing-library/react": "^11.1.0",
    "@testing-library/user-event": "^12.1.10",
    "axios": "^1.6.0",
    "date-fns": "^2.17.0",
    "global": "^4.4.0",
    "logrocket": "^1.0.14",
    "normalizr": "^3.6.1",
    "polished": "^4.1.1",
    "react": "^17.0.1",
    "react-aria": "^3.3.0",
    "react-dom": "^17.0.1",
    "react-helmet-async": "^1.0.7",
    "react-icons": "^4.2.0",
    "react-loader": "^2.4.7",
    "react-redux": "^7.2.2",
    "react-router-dom": "^5.2.0",
    "react-scripts": "4.0.2",
    "reflexbox": "^4.0.6",
    "styled-components": "^5.2.1",
    "tinycolor2": "^1.4.2",
    "web-vitals": "^1.0.1"
  },
  "resolutions": {
    "styled-components": "^5"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "cross-env BABEL_ENV=production babel src -d dist",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "generate": "plop",
    "storybook": "start-storybook -p 6006 -s public",
    "build-storybook": "build-storybook -s public",
    "build-storybook-docs": "build-storybook -s public --docs",
    "release": "auto shipit --base-branch=master",
    "chromatic": "chromatic --project-token=YOUR_CHROMATIC_TOKEN",
    "prettier-watch": "onchange \"**/*.js\" -- prettier --write {{changed}}"
  },
  "babel": {
    "presets": [
      [
        "react-app",
        {
          "absoluteRuntime": false
        }
      ]
    ],
    "plugins": [
      "babel-plugin-styled-components",
      "@babel/plugin-transform-react-jsx"
    ]
  },
  "devDependencies": {
    "@babel/cli": "^7.12.16",
    "@babel/plugin-transform-react-jsx": "^7.12.13",
    "@babel/preset-env": "^7.12.16",
    "@storybook/addon-a11y": "^6.1.18",
    "@storybook/addon-essentials": "^6.1.18",
    "@storybook/addon-links": "^6.1.18",
    "@storybook/node-logger": "^6.1.18",
    "@storybook/preset-create-react-app": "^3.1.6",
    "@storybook/react": "^6.1.18",
    "auto": "^10.16.5",
    "babel-loader": "8.1.0",
    "babel-plugin-styled-components": "^1.12.0",
    "chromatic": "^5.6.2",
    "cross-env": "^7.0.3",
    "eslint-config-prettier": "^7.2.0",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "jest-styled-components": "^7.0.3",
    "onchange": "^7.1.0",
    "plop": "^2.7.4",
    "prettier": "^2.2.1",
    "prettier-eslint-cli": "^5.0.0",
    "storybook-addon-designs": "^5.4.4"
  },
  "prettier": {
    "tabWidth": 2,
    "singleQuote": true,
    "semi": false,
    "trailingComma": "none",
    "arrowParens": "avoid"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest",
      "prettier",
      "prettier/react",
      "plugin:jsx-a11y/recommended",
      "plugin:react-hooks/recommended"
    ],
    "plugins": [
      "jsx-a11y",
      "react-hooks"
    ],
    "rules": {
      "quotes": [
        "error",
        "single"
      ],
      "semi": [
        "error",
        "never"
      ],
      "new-cap": "off",
      "no-invalid-this": "off",
      "consistent-return": "off",
      "valid-jsdoc": "off",
      "no-unused-vars": "error",
      "no-redeclare": "error",
      "no-console": "warn",
      "react/prop-types": "error",
      "import/no-anonymous-default-export": "off"
    },
    "overrides": [
      {
        "files": [
          "**/__tests__/*.js",
          "**/*.test.js"
        ],
        "rules": {
          "max-len": [
            "error",
            {
              "code": 100,
              "ignoreUrls": true,
              "ignoreStrings": true
            }
          ],
          "max-nested-callbacks": "off",
          "no-magic-numbers": "off",
          "max-statements": [
            "error",
            30
          ]
        }
      },
      {
        "files": [
          "src/components/**/*.stories.js"
        ],
        "rules": {
          "react/prop-types": "off"
        }
      },
      {
        "files": [
          "src/components/**/*.js",
          "src/views/**/*.js"
        ],
        "rules": {
          "no-magic-numbers": "off"
        }
      }
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{js,jsx}",
      "!<rootDir>/node_modules/",
      "!src/index.js",
      "!src/**/*.stories.js",
      "!src/stories/",
      "!src/utils/**/*"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 0,
        "functions": 0,
        "lines": 0,
        "statements": 0
      }
    },
    "resetMocks": false
  }
}
